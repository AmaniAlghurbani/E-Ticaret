@using MVC.AMANİ.SİTESİ.Models;
@model IEnumerable<ProductModel>

<div class="row">

    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-3" id="image">
            <div class="card">
                <div class="container">
                    <img class="card-img-top mt-2"  src="~/Upload/@urun.Image" alt="@urun.Name">
                </div>
                <div class="card-body">
                    <h4 class="card-title" >
                        <a href="/Home/Details/@urun.Id">@urun.Name </a>
                    </h4>
                    <p class="card-text pt-2 description">
                    @urun.Description</p>
                </div>
                <div class="card-footer">

                 
                        <small class="text-muted product-price ">
                           <i class="fa fa-try" aria-hidden="true"></i>
                            @urun.Price
                        </small>
              
                        <a href="/Home/Details/@urun.Id" class="btn btn-default btn-sm float-right">
                            <i class="fa fa-chevron-right" aria-hidden="true"></i>
                            Ürünü incele
                        </a>
                    </div>
                </div>
        </div>
    }

</div>

